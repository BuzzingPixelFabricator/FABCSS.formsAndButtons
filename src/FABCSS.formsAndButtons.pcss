/**
 * Variables
 */
:root {
    --inputOutline: none;
    --inputBackground: #fff;
    --inputBackgroundDisabled: #ebebeb;
    --inputColor: #595959;
    --inputColorDisabled: #737373;
    --inputPlaceholderColor: #bfbfbf;
    --inputFont: inherit;
    --inputFontSize: inherit;
    --inputBorderColor: #e6e6e6;
    --inputBorderColorHover: #cdcdcd;
    --inputBorderColorFocus: #b3b3b3;
    --inputBorderWidth: 1px;
    --inputRounded: 0;
    --inputPaddingHorizontal: 16px;
    --inputPaddingVertical: 10px;
    --inputMarginBottom: 20px;
    --inputCursorDisabled: not-allowed;

    --textareaLineHeight: 1.3em;
    --textareaMinHeight: 80px;
    --textareaPaddingHorizontal: 16px;
    --textareaPaddingVertical: 10px;
    --textareaResize: vertical;

    --labelFontSize: auto;
    --labelColor: #4d4d4d;
    --labelFontStyle: italic;
    --labelFontWeight: normal;
    --labelLineHeight: 1.3em;
    --labelMarginBottom: 4px;
    --labelMarginRight: 10px;

    --buttonColor: #fff;
    --buttonBackground: #737373;
    --buttonBackgroundHover: #666666;
    --buttonBackgroundActive: #5a5a5a;
    --buttonBorderWidth: 2px;
    --buttonBorderColor: var(--buttonBackground);
    --buttonFont: inherit;
    --buttonFontSize: inherit;
    --buttonFontWeight: normal;
    --buttonMarginBottom: 0;
    --buttonPaddingHorizontal: 30px;
    --buttonPaddingVertical: 13px;
    --buttonTextTransform: inherit;
    --buttonRounded: 3px;
    --buttonOutlinedBorderWidth: 2px;

    --lightButtonColor: #000;
    --lightButtonBackground: #fff;
    --lightButtonBackgroundHover: #e6e6e6;
    --lightButtonBorderColor: var(--lightButtonBackground);
    --lightButtonBorderColorHover: var(--lightButtonBackgroundHover);

    --coloredButtonBackground: #40EEFF;
    --coloredButtonBackgroundHover: #26ecff;
    --coloredButtonBackgroundActive: #0de9ff;
    --coloredButtonColor: var(--buttonColor);
    --coloredButtonBorderColor: var(--coloredButtonBackgroundHover);

    --disabledButtonBackground: #bfbfbf;
    --disabledButtonBackgroundButtonColored: #cccccc;
    --disabledButtonColor: #737373;
    --disabledButtonCursor: not-allowed;
}

input:focus,
select:focus,
textarea:focus,
button:focus {
    outline: var(--inputOutline);
}

.input,
.textarea,
.select {
    -webkit-appearance: none;
    background-color: var(--inputBackground);
    border-color: var(--inputBorderColor);
    border-style: solid;
    border-width: var(--inputBorderWidth);
    border-radius: var(--inputRounded);
    color: var(--inputColor);
    font-family: var(--inputFont);
    font-size: var(--inputFontSize);
    margin-bottom: var(--inputMarginBottom);
    outline: var(--inputOutline);
    padding-bottom: var(--inputPaddingVertical);
    padding-left: var(--inputPaddingHorizontal);
    padding-right: var(--inputPaddingHorizontal);
    padding-top: var(--inputPaddingVertical);
    width: 100%;
}

.input:hover,
.textarea:hover,
.select:hover {
    border-color: var(--inputBorderColorHover);
}

.input:focus,
.textarea:focus,
.select:focus {
    border-color: var(--inputBorderColorFocus);
}

.input::placeholder,
.textarea::placeholder,
.select::placeholder {
    color: var(--inputPlaceholderColor);
}

.input:disabled,
.textarea:disabled,
.select:disabled {
    background-color: var(--inputBackgroundDisabled);
    color: var(--inputColorDisabled);
    cursor: var(--inputCursorDisabled);
}

.select:not([multiple]) {
    background:
        var(--inputBackground)
        url(data:image/svg+xml;base64,)
        no-repeat
        96% 50%;
    padding-right: 44px;
}

.select:disabled:not([multiple]) {
    background-color: var(--inputBackgroundDisabled);
}

.input--borderless,
.textarea--borderless,
.select--borderless {
    border-color: var(--inputBackground);
}

.input--borderless:hover,
.textarea--borderless:hover,
.select--borderless:hover,
.input--borderless:focus,
.textarea--borderless:focus,
.select--borderless:focus {
    border-color: var(--inputBackground);
}

.input--inline,
.textarea--inline,
.select--inline {
    display: inline-block;
    margin-right: 6px;
    width: auto;
}

.textarea {
    line-height: var(--textareaLineHeight);
    min-height: var(--textareaMinHeight);
    padding-bottom: var(--textareaPaddingVertical);
    padding-left: var(--textareaPaddingHorizontal);
    padding-right: var(--textareaPaddingHorizontal);
    padding-top: var(--textareaPaddingVertical);
    resize: var(--textareaResize);
}

.label {
    color: var(--labelColor);
    display: block;
    font-size: var(--labelFontSize);
    font-style: var(--labelFontStyle);
    font-weight: var(--labelFontWeight);
    line-height: var(--labelLineHeight);
    margin-bottom: var(--labelMarginBottom);
    margin-right: var(--labelMarginRight);
    min-width: 100%;
}

.label--inline {
    display: inline-block;
}

.button {
    -webkit-appearance: none;
    -webkit-tap-highlight-color: var(--buttonColor);
    text-align: center;
    background-color: var(--buttonBackground);
    border: var(--buttonBorderWidth) solid var(--buttonBorderColor);
    border-radius: var(--buttonRounded);
    color: var(--buttonColor);
    cursor: pointer;
    display: inline-block;
    font-family: var(--buttonFont);
    font-size: var(--buttonFontSize);
    font-weight: var(--buttonFontWeight);
    line-height: 1em;
    margin-bottom: var(--buttonMarginBottom);
    padding-bottom: var(--buttonPaddingVertical);
    padding-left: var(--buttonPaddingHorizontal);
    padding-right: var(--buttonPaddingHorizontal);
    padding-top: var(--buttonPaddingVertical);
    text-decoration: none !important;
    text-shadow: none;
    text-transform: var(--buttonTextTransform);
    user-select: none;
    vertical-align: top;
}

.button:hover {
    border-color: var(--buttonBackgroundHover);
    background-color: var(--buttonBackgroundHover);
    color: var(--buttonColor);
}

.button:active {
    background-color: var(--buttonBackgroundActive);
}

.button:disabled,
.button--disabled {
    background: var(--disabledButtonBackground);
    border-color: var(--disabledButtonBackground);
    color: var(--disabledButtonColor);
    cursor: var(--disabledButtonCursor);
}

.button:disabled:hover,
.button--disabled:hover {
    background: var(--disabledButtonBackground);
    border-color: var(--disabledButtonBackground);
    color: var(--disabledButtonColor);
    cursor: var(--disabledButtonCursor);
}

.button--colored {
    background-color: var(--coloredButtonBackground);
    border-color: var(--coloredButtonBorderColor);
    color: var(--coloredButtonColor);
}

.button--colored:hover {
    border-color: var(--coloredButtonBackgroundHover);
    background-color: var(--coloredButtonBackgroundHover);
    color: var(--coloredButtonColor);
}

.button--colored:active {
    background-color: var(--coloredButtonBackgroundActive);
}

.button--colored.button--outlined {
    background: none;
    background-color: transparent;
    border-color: var(--coloredButtonBackground);
    color: var(--coloredButtonBackground);
}

.button--colored.button--outlined:hover {
    background-color: var(--coloredButtonBackground);
    border-color: var(--coloredButtonBackground);
    color: var(--buttonColor);
}

.button--colored:disabled,
.button--colored.button--disabled,
.button--colored:disabled:hover,
.button--colored.button--disabled:hover {
    background-color: var(--disabledButtonBackgroundButtonColored);
    border-color: var(--disabledButtonBackground);
    color: var(--disabledButtonColor);
}

.button--light {
    background-color: var(--lightButtonBackground);
    border-color: var(--lightButtonBorderColor);
    color: var(--lightButtonColor);
}

.button--light:hover {
    background-color: var(--lightButtonBackgroundHover);
    border-color: var(--lightButtonBorderColorHover);
    color: var(--lightButtonColor);
}

.button--outlined {
    background: none;
    border-color: var(--buttonBackground);
    border-style: solid;
    border-width: var(--buttonOutlinedBorderWidth);
    color: var(--buttonBackground);
}

.button--outlined:hover {
    border-color: var(--buttonBackground);
    background-color: var(--buttonBackground);
    color: var(--buttonColor);
}

.button--outlined.button--light {
    border-color: var(--lightButtonBackground);
    color: var(--lightButtonBackground);
}

.button--outlined.button--light:hover {
    border-color: var(--lightButtonBackground);
    background-color: var(--lightButtonBackground);
    color: var(--lightButtonColor);
}

.button--outlined:disabled,
.button--outlined.button--disabled,
.button--outlined:disabled:hover,
.button--outlined.button--disabled:hover {
    background-color: var(--disabledButtonBackground);
    border-color: var(--buttonBackground);
    color: var(--disabledButtonColor);
}
